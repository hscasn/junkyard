{
  "name": "nodeserverboilerplate",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "https://github.com/hscasn/nodeserverboilerplate.git",
  "author": "<henriquesc@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "./node_modules/.bin/tslint -p tsconfig.json --fix",
    "start": "node dist/index.js",
    "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha 'test/**/*.test.ts'",
    "test:unit": "./node_modules/.bin/nyc ./node_modules/.bin/mocha 'test/unit/**/*.test.ts'",
    "test:integration": "./node_modules/.bin/nyc ./node_modules/.bin/mocha 'test/integration/**/*.test.ts'",
    "coverage": "./node_modules/.bin/nyc report",
    "compile": "./node_modules/.bin/tsc && ./node_modules/.bin/copyfiles -u 1 src/public/css/* src/public/fonts/* src/public/index.html dist"
  },
  "pre-commit": [
    "compile",
    "lint"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "src/config"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "json-summary"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "lines": 90
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/ramda": "^0.25.35",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "copyfiles": "^2.0.0",
    "express": "^4.16.3",
    "express-rate-limit": "^2.11.0",
    "express-react-views": "^0.10.5",
    "helmet": "^3.13.0",
    "http-status-codes": "^1.3.0",
    "moment": "^2.22.2",
    "multer": "^1.3.1",
    "nodemailer": "^4.6.7",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3",
    "postgres-fill": "0.0.5",
    "pre-commit": "^1.2.2",
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.4.1",
    "reflect-metadata": "^0.1.12",
    "schema-inspector": "^1.6.8",
    "typeorm": "^0.2.25",
    "uuid": "^3.3.2",
    "webpack": "^4.16.3"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/bunyan": "^1.8.4",
    "@types/bunyan-format": "^0.2.0",
    "@types/chai": "^4.1.4",
    "@types/compression": "0.0.36",
    "@types/cookie-session": "^2.0.35",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/helmet": "0.0.38",
    "@types/http-status-codes": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/moment": "^2.13.0",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.5.4",
    "@types/nodemailer": "^4.6.2",
    "@types/nodemailer-smtp-transport": "^2.7.4",
    "@types/passport": "^0.4.5",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.10",
    "@types/react": "^16.4.7",
    "@types/react-bootstrap": "^0.32.11",
    "@types/react-dom": "^16.0.6",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^4.4.8",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.2.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "webpack-cli": "^2.1.5"
  }
}
