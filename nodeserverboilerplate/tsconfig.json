{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "types",
    "typeRoots": ["node_modules/@types", "./src/declaration"],
    "target": "es6",
    "lib": ["es2016", "dom"],
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src"
  ]
}